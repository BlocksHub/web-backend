{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["es2017"],
      "types": ["reflect-metadata","node","mocha"],
      "removeComments": true,
      "module": "commonjs",
      "outDir": "dist",
      "moduleResolution": "node",
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
  }
